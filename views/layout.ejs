<!doctype html>
<html>
<head>
	<title><%= 'Disco Beta Dashboard' %></title>
	<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<script src="/js/jquery.js"></script>
	<link href="/bootstrap/css/bootstrap.css" rel="stylesheet">
	<link href='https://fonts.googleapis.com/css?family=Lato:300,400' rel='stylesheet' type='text/css'>
	<link rel="chrome-webstore-item" href="https://chrome.google.com/webstore/detail/edpngmdlbbfkmjhmoelpbhdalhmmjfap">
	<!-- chrome detect -->
	<style>
		body {
			font-family: 'Lato', sans-serif !important;
		}
	</style>
	<script>
		var discoDetect = function(hasExtension, noExtension, noChrome) {
			$(function() {
				setTimeout(function() {
					if (window.chrome != null) {
						if (document.documentElement.getElementsByClassName('disco-identifier').length) {
							if (hasExtension) {
								window.location = hasExtension;
							}
						} else {
							if (noExtension) {
								window.location = noExtension;
							}
						}
					} else {
						if (noChrome) {
							window.location = noChrome;
						}
					}	
				}, 500);
			});
		}
	</script>
	<script src="/wormhole/service/connect.js"></script>
	<script>
		wh.ready(function () {
			if ($('.activity-count').length) {
				wh.rpc.live();
			}
		});
		wh.on("setCommentCount", function (err, count) {
			$('.activity-count').text(count);
		});
	</script>
</head>
<body>
	<%- body %>
</body>
</html>